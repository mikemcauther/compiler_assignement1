// Greatest Common Divisor calculator - for x = 12 and y = 21 the expected
// sequence of outputs is 9, 3, 6, 3, and finally 3 as the GCD
var 
  x : int;
  y : int;
  gcd : int;
begin
  x := 12;
  y := 21;
  do x < y then y := y - x; write y
  [] x = y then gcd := x exit
  [] y < x then x := x - y; write x
  od;
  write gcd
end